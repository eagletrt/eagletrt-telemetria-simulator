{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015"],
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "paths": {
            "@/*": ["./*"],
            "@lib/*": ["./lib/*"],
            "@bin/*": ["./bin/*"]
        },
        "outDir": "../dist"
    },
}